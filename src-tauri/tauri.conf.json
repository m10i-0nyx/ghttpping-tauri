{
    "$schema": "https://schema.tauri.app/config/2.0.0",
    "productName": "ghttpping-tauri",
    "version": "0.1.0",
    "identifier": "net.0nyx.ghttpping.tauri",
    "build": {
        "beforeDevCommand": "pnpm exec vite",
        "devUrl": "http://localhost:5173",
        "beforeBuildCommand": "pnpm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "ghttpping - HTTP/HTTPS疎通確認ツール",
                "width": 900,
                "height": 700,
                "resizable": true,
                "fullscreen": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
